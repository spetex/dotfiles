### Variables
#
# Use $mod for Alt or Mod4 for Logo key.
set $mod Mod4
# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

set $term kitty

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
# font pango:FiraSans 8
font pango:DejaVu Sans Mono 8

output eDP-1 resolution 1600x900 position 0,0
#output eDP-1 disable
output DP-4 resolution 1920x1200 position 0,0
output DP-5 resolution 1920x1080 position 1920,0

output eDP-1 background ~/Pictures/Wallpapers/blue-sky.jpg fit
output DP-4 background ~/Pictures/Wallpapers/blue-sky.jpg fit
output DP-5 background ~/Pictures/Wallpapers/blue-sky.jpg fit

# use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
# start a terminal
bindsym $mod+Return exec $term
# start a program launcher
set $menu rofi -show run -theme Monokai | xargs swaymsg exec
bindsym $mod+d exec $menu

bindsym $mod+p exec grim $(date +'%Y-%m-%d-%H%M%S_grim.png')
bindsym $mod+Shift+p exec grim -g "$(slurp)" $(date +'%Y-%m-%d-%H%M%S_grim.png')

# kill focused window
bindsym $mod+Shift+q kill
# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'
# lock screen
bindsym $mod+Shift+z exec swaylock -c 000000

bindsym XF86AudioRaiseVolume exec amixer -Dpulse set Master 5%+
bindsym XF86AudioLowerVolume exec amixer -Dpulse set Master 5%-
bindsym XF86AudioMute exec amixer -Dpulse set Master toggle

# move workspaces to screens
bindsym $mod+Shift+b move workspace to output left
bindsym $mod+Shift+n move workspace to output right

# change focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
# bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v
bindsym $mod+b split h

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# move the currently focused window to the scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $mod+minus scratchpad show

# Workspaces:
set $firefox "1: "
set $vim "2: "
set $term1 "3: "
set $term2 "4: "
set $mail "5: "
set $notes "6: "
set $chat "7: "
set $music "8: "
set $blank4 "9: "
set $blank5 "10: "

# switch to workspace
bindsym $mod+1 workspace $firefox
bindsym $mod+2 workspace $vim
bindsym $mod+3 workspace $term1
bindsym $mod+4 workspace $term2
bindsym $mod+5 workspace $mail
bindsym $mod+6 workspace $notes
bindsym $mod+7 workspace $chat
bindsym $mod+8 workspace $music
bindsym $mod+9 workspace $blank4
bindsym $mod+0 workspace $blank5
# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $firefox
bindsym $mod+Shift+2 move container to workspace $vim
bindsym $mod+Shift+3 move container to workspace $term1
bindsym $mod+Shift+4 move container to workspace $term2
bindsym $mod+Shift+5 move container to workspace $mail
bindsym $mod+Shift+6 move container to workspace $notes
bindsym $mod+Shift+7 move container to workspace $chat
bindsym $mod+Shift+8 move container to workspace $music
bindsym $mod+Shift+9 move container to workspace $blank4
bindsym $mod+Shift+0 move container to workspace $blank5
#

bar {
  status_command i3status -c ~/.config/i3status/config
  font pango:FiraSans 10
}

# remove window decorations
for_window [class="^.*"] border pixel 1

# Add gaps
gaps inner 20
gaps outer 0

bindsym $mod+g	    gaps outer current plus 5
bindsym $mod+Shift+g	gaps outer current minus 5

#
# App specific config
#
for_window [title="^Mozilla Firefox$"] move container to workspace $firefox
for_window [title="^Mozilla Thunderbird$"] move container to workspace $mail
for_window [title="^Spotify$"] move container to workspace $music
for_window [title="^Slack$"] move container to workspace $chat
for_window [title="^Slack - GoOut$"] move container to workspace $chat
for_window [title="^Discord$"] move container to workspace $chat
for_window [title="^Discord Updater$"] move container to workspace $chat
for_window [title="Telegram"] move container to workspace $chat
for_window [title="Mark Text"] move container to workspace $notes
for_window [title="^Toggl Desktop$"] move container to workspace $mail
for_window [title="^Todoist$"] move container to workspace $mail
for_window [title="^MineTime$"] move container to workspace $mail
